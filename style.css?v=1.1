* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    font-size: 10px;
}

body {
    font-family: Arial, Helvetica, sans-serif;
    font-weight: normal;
    text-transform: uppercase;
    line-height: 1em;
    text-shadow: 1px 1px 4px #fff;
    background: url('https://cdn.shopify.com/s/files/1/0564/5975/5606/files/DtEdXwX44ApCMUsPZpLew24VbAXw1ivm.png') no-repeat center center;
    background-size: cover;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    font-size: calc(var(--font-body-scale) * 1.2rem);
    font-style: normal;
    line-height: var(--font-body-line-height);
    letter-spacing: calc(var(--font-body-letter-spacing) * 0.1);
}

:root {
    --font-body-scale: 1.0;
    --font-body-style: normal;
    --font-body-weight: 400;
    --font-body-line-height: 1.4;
    --font-body-letter-spacing: 0.2em;
}

.container {
    text-align: center;
    z-index: 1;
    position: relative;
}

.countdown-display {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
    width: 100%;
}

.countdown-timer {
    font-size: 80px !important;
    color: #c89a2e !important;
    text-shadow: 2px 1px 2px #000, 0 0 1px #c89a2e !important;
    margin: 0px !important;
    padding: 0 0 80px 0 !important;
    font-family: "Barlow Condensed", sans-serif !important;
    font-weight: 550 !important;
    text-transform: uppercase !important;
    line-height: 1em !important;
    font-style: italic !important;
    letter-spacing: 0.05em !important;
    transform: scaleX(0.8) scaleY(1.2) skew(-5deg) !important;
    width: 100%;
    text-align: center !important;
    font-variant-numeric: tabular-nums !important;
}

.expiration-text {
    display: flex;
    flex-direction: column;
    gap: 0;
}

.expires-date,
.expires-time {
    font-size: 48px !important;
    color: #c89a2e !important;
    text-shadow: 2px 1px 2px #000, 0 0 1px #c89a2e !important;
    font-family: "Barlow Condensed", sans-serif !important;
    font-weight: 550 !important;
    text-transform: uppercase !important;
    line-height: 1em !important;
    font-style: italic !important;
    letter-spacing: 0.05em !important;
    margin: 0 !important;
    padding: 0 !important;
    transform: scaleX(0.8) scaleY(1.2) skew(-5deg) !important;
}

.expires-date {
    margin-bottom: 25px !important;
}

/* Responsive Design für Desktop-Geräte */
@media (min-width: 769px) {
    .countdown-timer {
        font-size: 200px !important;
    }
    
    .expires-date,
    .expires-time {
        font-size: 96px !important;
    }
}

/* Responsive Design für große Bildschirme */
@media (min-width: 1200px) {
    .countdown-timer {
        font-size: 300px !important;
    }
    
    .expires-date,
    .expires-time {
        font-size: 144px !important;
    }
}

/* Responsive Design für sehr große Bildschirme */
@media (min-width: 1600px) {
    .countdown-timer {
        font-size: 400px !important;
    }
    
    .expires-date,
    .expires-time {
        font-size: 192px !important;
    }
}

/* Responsive Design für mobile Geräte */
@media (max-width: 768px) {
    .countdown-timer {
        font-size: 3.9rem; /* 3rem + 30% = 3.9rem */
    }
    
    .expires-date,
    .expires-time {
        font-size: 1.3rem; /* 1rem + 30% = 1.3rem */
    }
}

@media (max-width: 480px) {
    .countdown-timer {
        font-size: 3.25rem; /* 2.5rem + 30% = 3.25rem */
    }
    
    .expires-date,
    .expires-time {
        font-size: 1.17rem; /* 0.9rem + 30% = 1.17rem */
    }
} 
